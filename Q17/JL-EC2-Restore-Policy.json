{
	"Version": "2012-10-17",
	"Statement": [
		{
			"Sid": "AllowEC2SnapshotRestoreOperations",
			"Effect": "Allow",
			"Action": [
				"ec2:DescribeInstances",
				"ec2:DescribeSnapshots",
				"ec2:CreateSnapshot",
				"ec2:CreateTags",
				"ec2:RunInstances",
				"ec2:CreateVolume",
				"ec2:AttachVolume",
				"ec2:DescribeVolumes",
				"ec2:DeleteVolume",
				"ec2:GetConsoleOutput",
				"ec2:DescribeSecurityGroups",
				"ec2:DescribeSubnets"
			],
			"Resource": "*"
		}
	]
}